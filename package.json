{
    "name": "lava-core",
    "version": "2.0.0",
    "description": "Lava Core - For all future Volcano projects",
    "scripts": {
        "dev": "concurrently -n frontend,backend,memdb \"yarn frontend\" \"yarn backend\" \"yarn memdb\"",
        "memdb": "yarn --cwd backend memdb",
        "frontend": "yarn --cwd frontend dev",
        "backend": "yarn --cwd backend dev"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/studiobasalt/lava-core.git"
    },
    "author": "Volcano B.V.",
    "bugs": {
        "url": "https://github.com/studiobasalt/lava-core/issues"
    },
    "homepage": "https://github.com/studiobasalt/lava-core#readme",
    "dependencies": {
        "concurrently": "^7.6.0",
        "express": "^4.21.0"
    }
}
