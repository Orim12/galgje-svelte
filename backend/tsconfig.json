{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "node_modules/*": [
        "./node_modules/*"
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
    "build",
    "bin"
  ],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}